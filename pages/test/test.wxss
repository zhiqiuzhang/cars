/* pages/test/test.wxss */
.container{
  padding-top: 0px;
}
.xc{
  padding: 10px 0px 15px 10px;
  box-sizing: border-box;
}
text{
  display: block;
}
.ty{
  position: relative;
}
.ty text:nth-child(1){
  font-size: 12px;
  color: darkgrey;
  padding: 0px 0px 3px 8px;
  box-sizing: border-box;
}
.ty text:nth-child(2){
  font-size: 16px;

  padding: 0px 0px 5px 8px;
  box-sizing: border-box;
}
.phone{
  position: relative;
}
.phone text:nth-of-type(1){
  font-size: 12px;
  color: darkgrey;
  padding: 0px 0px 3px 8px;
  box-sizing: border-box;
}
.phone text:nth-of-type(2){
  font-size: 16px;

  padding: 0px 0px 5px 8px;
  box-sizing: border-box;
  position: relative;
}
.usermotto{
  position: absolute;
  bottom: 0px;
}
.phone text:nth-of-type(2):after{
  content: "";
	display: block;
	width: 1px;
	height: 16px;
	background-color: black;
	position: absolute;
	top: 5px;
	right: 40px;
  z-index: 99;
	
}
 .phone image{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 22px;
  right: 5px;

} 
 .ty image{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 22px;
  right: 5px;

} 